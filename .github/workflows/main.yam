name: Main
on:
  pull_request:

jobs:
  scout:
    permissions: write-all
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3
      - name: Setup Docker buildx
        uses: docker/setup-buildx-action@v2.5.0

      - name: Extract Docker metadata
        id: meta
        uses: docker/metadata-action@v4.4.0
        with:
          images: eunomie/test-scout-action
          labels: |
            org.opencontainers.image.revision=${{ env.SHA }}
          tags: latest

      - name: Build and push Docker image
        id: build-and-push
        uses: docker/build-push-action@v4.0.0
        with:
          context: .
          push: false
          load: true
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max
      - name: check
        run: |
          docker image ls
          docker inspect eunomie/test-scout-action
        
      - name: Login to Docker Hub
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKER_USER }}
          password: ${{ secrets.DOCKER_PAT }}

      - name: Scout Quickview
        id: quickview
        uses: eunomie/scout-action@main
        with:
          command: quickview
          debug: true
          image: ""
          github-token: ${{ secrets.GITHUB_TOKEN }}
          write-comment: true
          keep-previous-comments: true
          
      - name: qv
        id: qv
        uses: eunomie/scout-action@main
        with:
          debug: true
          github-token: ${{ secrets.GITHUB_TOKEN }}
          command: quickview
          image: golang:1.20.2-alpine
          
      - name: Compare
        id: compare
        uses: eunomie/scout-action@main
        with:
          debug: true
          github-token: ${{ secrets.GITHUB_TOKEN }}
          command: compare
          image: golang:1.20.2-alpine
          to: golang:1.19.4-alpine3.16
          exit-code: false
